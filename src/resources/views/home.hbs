<script>
        document.addEventListener('DOMContentLoaded', () => {
        //init
        const endpoint = 'https://raw.githubusercontent.com/jpatokal/openflights/master/data/airports.dat'
        fetch(endpoint)
            .then(response => response.text())
            .then(data => {
            const airports = data
                .split('\n')
                .map(line => line.split(','))
                .filter(fields => fields[3] === '"Vietnam"')
                .map(fields => ({
                airportName: fields[2].replace(/"/g, ''),
                airportCode: fields[4].replace(/"/g, ''),
                // Add more fields as needed
                }));

            var htmlStr = ""  
            var index = 0
            airports.forEach((item)=>{
                index += 1
                if (item.airportCode != '\\N' && index < 13)
                    htmlStr += `<option value=${item.airportCode} class="option">${item.airportName} (${item.airportCode})</option>\n`;

            })
            $('.form-select .nice-select .list').html(htmlStr)
            })
            .catch(error => {
            console.error('Error:', error)
            });

        var oneWay = document.getElementById('btn-one-way')
        var roundTrip = document.getElementById('btn-round-trip')
        $('input[name="return"]').css('display', 'none')
        oneWay.addEventListener('click', ()=>{
            oneWay.classList.add('success')
            oneWay.classList.remove('success-border')
            roundTrip.classList.remove('success')
            roundTrip.classList.add('success-border')
            $('input[name="return"]').css('display', 'none')

        })
        roundTrip.addEventListener('click', ()=>{
            roundTrip.classList.add('success')
            roundTrip.classList.remove('success-border')
            oneWay.classList.remove('success')
            oneWay.classList.add('success-border')
            $('input[name="return"]').css('display', 'block')
        })	
    })

</script>
