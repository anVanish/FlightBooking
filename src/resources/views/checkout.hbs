<!-- User Info Start -->
<div class="container-fluid pt-4">
    <div class="row">
        
        <!-- Flights List Start -->
        <div class="col-lg-8 col-md-12">
            <div class="pb-3 ">
                <div class="post-content-area rounded-lg mb-4 pt-3 pb-4">
                    <h3 class="text-primary text-center">Xác nhận Đặt vé</h3>
                    <div class="col-lg-12">
                        <div class="alert-msg" style="text-align: left;"></div>
                        <form action="/flight/book" method="post">
                            <button type="submit" id="btn-continue" class="genric-btn primary" style="float: right;">Đặt vé</button>											
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- Flights List End -->

        <!-- User Sidebar Start -->
        <div class="col-lg-4 col-md-12">
            <div class="card mb-4 border-0 pl-4 post-content-area">
                
                <div class="post-content-area rounded-lg mb-4">
                    <table class="table order-table text-center mb-0">
                        <tbody class="align-middle">
                            <tr>
                                <th colspan="2" class="text-left"><h4 class="text-primary">Chi tiết chuyến bay</h4></th>
                            </tr>
                            <tr>
                                <td class="align-middle text-left">
                                    <i class="fa fa-plane pr-2" aria-hidden="true"></i>
                                    {{flight.place_from.place_code}} <span class="lnr lnr-arrow-right"></span> {{flight.place_to.place_code}}
                                </td>
                                <td class="align-middle">{{flight.price}} VND</td>
                            </tr>
                            <tr>
                                <td class="align-middle text-left" colspan="2">Khởi hành {{flight.depature_time}}:00</td>
                            </tr>
                            <tr>
                                <td class="align-middle text-left" colspan="2">
                                    {{flight.place_from.place_name}} <i class="fa fa-plane pr-2 pl-2" aria-hidden="true"></i> {{flight.place_to.place_name}}
                                    <br>{{flight.flight_name}} - {{flight.plane_name}}
                                    <br>Hành khách x{{members}}
                                </td>
                            </tr>
                            <tr>
                                <td class="align-middle text-left text-primary" style="font-size: 1.2rem;">Tổng tiền</td>
                                <td class="align-middle" style="font-size: 1.2rem;">{{total}} VND</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- User Sidebar End -->
    </div>
</div>
<!-- User Info End -->
