<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 info-left">
                <img class="img-fluid" src="../img/about/info-img.jpg" alt="">
            </div>
            <div class="col-lg-6 info-right">
                <form action="" id="form-update" method="POST">
                    <div class="mt-20">
                        <h6 class="typo-list">Tên</h6>
                        <input type="text" value="{{user.name}}" name="name" placeholder="Tên" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Tên'" required class="single-input">
                    </div>

                    <div class="mt-20">
                        <h6 class="typo-list">Email</h6>
                        <input type="text" value="{{user.email}}" name="email" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email'" required class="single-input">
                    </div>

                    <div class="mt-20">
                        <h6 class="typo-list">Số điện thoại</h6>
                        <input type="text" value="{{user.phone}}" name="phone" placeholder="Số điện thoại" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Số điện thoại'" class="single-input">
                    </div>

                    <div class="button-group-area mt-30">
                        <button type="submit" id="btn-update" class="genric-btn primary circle">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>	
</section>
<!-- End contact-page Area -->

<script>
    document.addEventListener('DOMContentLoaded', function(){
        $('#btn-update').on('click', function(event){
            event.preventDefault();
            $.ajax({
                url: '',
                method: 'post',
                data: $('#form-update').serialize(),
                success: function (res) {
                    if (res.err) {
                        showToast(res.message, "error");
                    }
                    else {
                        showToast(res);
                        setTimeout(() => {
                            window.location.href = "/user";
                        }, 1000)
                    }
                }
            })
            
        })
    })
</script>