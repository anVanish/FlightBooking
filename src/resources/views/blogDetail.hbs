<!-- start banner Area -->
<section class="relative about-banner">	
    <div class="overlay overlay-bg"></div>
    <div class="container">				
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Chi tiết bài viết				
                </h1>	
                <p class="text-white link-nav"><a href="/home">Home </a>  <span class="lnr lnr-arrow-right"></span><a href="/blog">Blog </a> <span class="lnr lnr-arrow-right"></span> <a href="#"> Blog Details Page</a></p>
            </div>	
        </div>
    </div>
</section>
<!-- End banner Area -->					  

<!-- Start post-content Area -->
<section class="post-content-area single-post-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">
                    <div class="col-lg-12">
                        <div class="feature-img">
                            <img class="img-fluid" src="{{blog.image}}" alt="">
                        </div>									
                    </div>
                    <div class="col-lg-3  col-md-3 meta-details">
                        <div class="user-details row">
                            <p class="user-name col-lg-12 col-md-12 col-6"><a>Admin</a> <span class="lnr lnr-user"></span></p>
                            <p class="date col-lg-12 col-md-12 col-6"><a>{{formatDateTime blog.createdAt}}</a> <span class="lnr lnr-calendar-full"></span></p>
                            <p class="view col-lg-12 col-md-12 col-6"><a>{{blog.views}} Views</a> <span class="lnr lnr-eye"></span></p>
                            <ul class="social-links col-lg-12 col-md-12 col-6">
                                <li><a><i class="fa fa-facebook"></i></a></li>
                                <li><a><i class="fa fa-twitter"></i></a></li>
                                <li><a><i class="fa fa-github"></i></a></li>	
                            </ul>																				
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9">
                        <h3 class="mt-20 mb-20">{{blog.header}}</h3>
                        <p class="excert">
                            {{blog.brief}}
                        </p>
                    </div>
                    <div class="col-lg-12">
                        <div class="quotes">
                            {{{blog.content}}}
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-lg-4 sidebar-widgets">
                <div class="widget-wrap">
                    <div class="single-sidebar-widget popular-post-widget">
                        <h4 class="popular-title">Bài viết phổ biến</h4>
                        <div class="popular-post-list">
                            {{#each popBlogs}}
                            <div class="single-post-list d-flex flex-row align-items-center">
                                <div class="thumb">
                                    <img class="img-fluid" src="{{this.image}}" style="width: 200px;" alt="">
                                </div>
                                <div class="details">
                                    <a href="{{this._id}}"><h6>{{this.header}}</h6></a>
                                    <p>{{this.views}} Views</p>
                                </div>
                            </div>
                            {{/each}}														
                        </div>
                    </div>							
                </div>
            </div>
        </div>
    </div>	
</section>
<!-- End post-content Area -->


<script>
    const homeLink = document.getElementById('home-link');
    homeLink.href = window.location.origin + '/home';

    const userLink = document.getElementById('user-link');
    userLink.href = window.location.origin + '/user';

    const aboutLink = document.getElementById('about-link');
    aboutLink.href = window.location.origin + '/about';

    const blogLink = document.getElementById('blog-link');
    blogLink.href = window.location.origin + '/blog';

    const loginLink = document.getElementById('login-link');
    loginLink.href = window.location.origin + '/login';

</script>